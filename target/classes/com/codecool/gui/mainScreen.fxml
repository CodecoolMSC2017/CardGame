            <Font name="BlackChancery" size="41.0" />
         </font>
         <effect>
            <GaussianBlur radius="0.0" />
         </effect>
      </Label>
      <Label fx:id="optionsButton" layoutX="232.0" layoutY="383.0" onMouseClicked="#enterOptions" onMouseEntered="#optionsButtonHover" onMouseExited="#optionsButtonHoverOff" text="Options" textFill="#57240f">
