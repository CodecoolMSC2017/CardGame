<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codecool.gui.Controller">
   <children>
      <ImageView fx:id="background" fitHeight="826.0" fitWidth="1396.0" layoutX="-3.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@startingScreen.jpg" />
         </image>
      </ImageView>
      <Label layoutX="106.0" layoutY="14.0" prefHeight="92.0" prefWidth="384.0" text="Medieval Warfare" textFill="WHITE">
         <font>
            <Font name="BlackChancery" size="51.0" />
         </font>
         <effect>
            <DropShadow spread="0.5" />
         </effect>
      </Label>
      <ImageView fitHeight="596.0" fitWidth="573.0" layoutX="175.0" layoutY="122.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@menuBackDrop.png" />
         </image>
         <effect>
            <DropShadow height="47.68" radius="26.305" width="59.54" />
         </effect>
      </ImageView>
      <Label fx:id="startButton" layoutX="245.0" layoutY="273.0" onMouseClicked="#startGame" onMouseEntered="#startButtonHover" onMouseExited="#startButtonHoverOff" text="Start" textFill="#57240f">
